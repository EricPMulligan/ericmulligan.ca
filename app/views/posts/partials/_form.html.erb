<%= form_for post, url: url, html: { id: id } do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :categories %>
    <%= f.collection_check_boxes :category_ids, Category.where(created_by: current_user).order(name: :asc), :id, :name %>
  </div>

  <div class="form-group">
    <%= f.submit 'Publish', class: 'btn btn-primary', id: "#{id}-publish-btn" %>
    <%= f.submit 'Save', class: 'btn btn-default', id: "#{id}-save-btn" %>
  </div>
<%- end %>
