<section id="category-<%= @category.id %>">
  <section class="category">
    <header>
      <h2>Category - <%= @category.name %></h2>
    </header>
    <content>
      <%= @category.description %>
    </content>
    <footer>
      <div>
        <%= link_to 'Edit', edit_category_path(@category), id: "edit-category-#{@category.id}-lnk" %> | <%= link_to 'Delete', category_path(@category), method: :delete, id: "delete-category-#{@category.id}-lnk" %>
      </div>
      <p><%= @category.posts.count %> post(s)</p>
    </footer>
  </section>
  <div class="associated-posts">
    <header>
      <h3>Posts</h3>
    </header>
    <content>
      <%- @category.posts.each do |post| %>
        <%= render partial: 'posts/partials/post', locals: { post: post } %>
      <%- end %>
    </content>
  </div>
</section>
