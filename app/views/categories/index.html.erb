<section class="categories">
  <%- @categories.each do |category| %>
    <div class="category">
      <h2><%= link_to category.name, category_path(category) %></h2>
      <p><%= category.posts.count %> post(s)</p>
    </div>
  <%- end %>

  <%= will_paginate @categories, renderer: BootstrapPagination::Rails %>
</section>
