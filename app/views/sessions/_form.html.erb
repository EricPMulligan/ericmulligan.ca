<%= form_for :session, url: session_path, html: { id: 'sign-in' } do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary', id: 'sign-in-btn' %>
  </div>
<% end %>
