<%= provide :title, 'Contact Me' %>

<div class="new-contact">
  <h2>Contact Me</h2>

  <%= form_for @contact, url: contact_path, html: { id: 'new-contact' } do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control contact-body', required: true %>
    </div>

    <div class="form-group">
      <%= f.submit 'Submit', class: 'btn btn-primary', id: 'new-contact-btn' %>
    </div>
  <%- end %>
</div>
